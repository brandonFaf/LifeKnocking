<% provide(:title, 'Podcasts') %>

<h1 class='text-center'>Podcasts</h1>


<% if can? :create, current_user  %>
<%= link_to "Add new Podcast", new_podcast_path %>
<br>
<% end %>

<div class="list-group">
  <%for pod in @pods %>
   <%= link_to(pod) do %>
    <div class="list-group-item">
      <h2 class="list-group-item-heading"> <%= pod.title%> </h2>
   <%end%>

      <% if can? :destroy, current_user  %>
        <%= link_to "DELETE", pod, method: :delete%>
        <br>
      <% end %>
      <br>
      <!-- <audio controls>
        <source src="<%=pod.audio.url%>" type="audio/mpeg">
      </audio> --> 
      <br>
      <br>
      <p class="list-group-item-text"><%=simple_format(pod.description)%></p>
    </div>
  <%end%>
</div>