<%= form_for(@bug) do |f| %>
  <% if @bug.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@bug.errors.count, "error") %> prohibited this bug from being saved:</h2>

      <ul>
      <% @bug.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
	<div class = "row">
		<div class="field  col-md-7 col-sm-7  <%= 'form-group has-error' if @bug.errors[:name].count > 0 %>">
	    	<label class="control-label">Your Name</label><br>
	    	<%= f.text_field :name, size: "50", class: "form-control"%>
	  	</div>
  	</div>
  	<div class="row">
		<div class="field col-md-7 col-sm-7  <%= 'form-group has-error' if @bug.errors[:title].count > 0 %>">
	    <%= f.label :title, class: "control-label"%><br>
	    <%= f.text_field :title, size: "50", class: "form-control"%>
	  </div>
  </div>
  <div class="row">
	  <div class="field col-md-7 col-sm-7 <%= 'form-group has-error' if @bug.errors[:description].count > 0 %>">
	    <%= f.label :description, class: "control-label" %><br>
	    <%= f.text_area :description, size: "80x10", class: "form-control" %>
	  </div>
  </div>
  <div class="row">
		<div class="field col-md-7 col-sm-7 <%= 'form-group has-error' if @bug.errors[:platform].count > 0 %>">
	    <%= f.label :platform, class: "control-label"%><br>
	    <%= f.text_field :platform, size: "50", class: "form-control"%>
	  </div>
  </div>
   <br>
  <div class="action">
    <%= f.submit "Create Bug", class: "btn btn-primary" %>
    <%= link_to 'Cancel', posts_path, class: "btn btn-primary" %>
  </div>
  <br>
<% end %>
