<%= form_for(@photo) do |f| %>
  <% if @photo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@photo.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @photo.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title, size: "50" %>
  </div>
  <!-- Upload your attachments via a simple file_fields in the form -->
 <div class="field">
    <%= f.label :pic %><br>
    <%= f.file_field :pic %>
  </div>
  <div class="field">
    <%= f.label :caption %><br>
    <%= f.text_area :caption, size: "90x10" %>
  </div>
  <div class="field">
    <%= f.label :episode_id %><br>
    <%= f.text_field :episode_id %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Back', Episode.find(@photo.episode_id).podcast %>